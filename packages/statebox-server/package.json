{
    "name": "statebox-server",
    "version": "0.0.2",
    "main": "dist/main.js",
    "types": "dist/main.d.ts",
    "license": "MIT",
    "homepage": "https://github.com/rzseattle/statebox#readme",
    "repository": {
        "type": "git",
        "url": "https://github.com/rzseattle/statebox"
    },
    "bugs": {
        "url": "https://github.com/rzseattle/statebox/issues"
    },
    "author": {
        "name": "Artur Kmera",
        "email": "artur.kmera@3code.pl"
    },
    "engines": {
        "node": ">=14.15.3"
    },
    "files": [
        "dist/**/*",
        "src/**/*"
    ],
    "scripts": {
        "start": "node lib/main.js",
        "clean": "rimraf dist coverage build tmp",
        "build": "tsc -p tsconfig.release.json",
        "build:watch": "tsc -w -p tsconfig.release.json",
        "lint": "eslint . --ext .ts,.tsx",
        "test": "jest --coverage",
        "test:watch": "jest --watch",
        "dev": "ts-node-dev --respawn src/server.ts",
        "prepare": "npm run clean && npm run build"
    },
    "devDependencies": {
        "@types/jest": "^26.0.19",
        "@types/node": "^14.14.10",
        "@types/ws": "^7.4.0",
        "@typescript-eslint/eslint-plugin": "^4.11.1",
        "@typescript-eslint/parser": "^4.11.1",
        "eslint": "^7.16.0",
        "eslint-config-prettier": "^7.1.0",
        "eslint-plugin-jest": "^24.1.3",
        "jest": "^26.6.3",
        "prettier": "^2.2.1",
        "rimraf": "^3.0.2",
        "ts-jest": "^26.4.4",
        "ts-node-dev": "^1.0.0",
        "tslint": "^6.1.3",
        "typescript": "^4.1.2"
    },
    "dependencies": {
        "dotenv": "^8.2.0",
        "nanoid": "^3.1.20",
        "statebox-common": "^0.0.2",
        "ws": "^7.4.1"
    },
    "prettier": {
        "useTabs": false,
        "tabWidth": 4,
        "printWidth": 120,
        "arrowParens": "always",
        "trailingComma": "all"
    }
}
