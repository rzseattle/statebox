{
    "name": "statebox-server",
    "version": "1.0.0",
    "main": "index.js",
    "license": "MIT",
    "scripts": {
        "start": "node lib/main.js",
        "clean": "rimraf coverage build tmp",
        "build": "tsc -p tsconfig.release.json",
        "build:watch": "tsc -w -p tsconfig.release.json",
        "lint": "eslint . --ext .ts,.tsx",
        "test": "jest --coverage",
        "test:watch": "jest --watch",
        "dev": "ts-node-dev --respawn src/server.ts"
    },
    "devDependencies": {
        "@types/express": "^4.17.9",
        "@types/jest": "^26.0.19",
        "@types/node": "^14.14.10",
        "@types/ws": "^7.4.0",
        "@typescript-eslint/eslint-plugin": "^4.11.1",
        "@typescript-eslint/parser": "^4.11.1",
        "eslint": "^7.16.0",
        "eslint-config-prettier": "^7.1.0",
        "eslint-plugin-jest": "^24.1.3",
        "jest": "^26.6.3",
        "prettier": "^2.2.1",
        "rimraf": "^3.0.2",
        "ts-jest": "^26.4.4",
        "ts-node-dev": "^1.0.0",
        "tslint": "^6.1.3",
        "typescript": "^4.1.2"
    },
    "dependencies": {
        "dotenv": "^8.2.0",
        "express": "^4.17.1",
        "nanoid": "^3.1.20",
        "ws": "^7.4.1"
    },
    "prettier": {
        "useTabs": false,
        "tabWidth": 4,
        "printWidth": 120,
        "arrowParens": "always",
        "trailingComma": "all"
    }
