{
    "name": "status-server",
    "version": "1.0.0",
    "main": "index.js",
    "license": "MIT",
    "scripts": {
        "dev": "ts-node-dev --respawn ./src/server.ts",
        "build": "deploy build -t media.as-pl.com-builder ./build/docker/builder/ &&  docker run -v $(pwd):/project -v ~/.ssh:/root/.ssh media.as-pl.com-builder",
        "run": "deploy build -t media.as-pl.com ./build/docker/app/ &&  docker run -v $(pwd):/project -p 4000:4000 media.as-pl.com"
    },
    "devDependencies": {
        "@types/express": "^4.17.7",
        "@types/node": "^14.6.0",
        "@types/ws": "^7.2.6",
        "prettier": "^2.0.4",
        "ts-node-dev": "^1.0.0-pre.60",
        "tslint": "^6.1.3",
        "typescript": "^4.0.2"
    },
    "dependencies": {
        "dotenv": "^8.2.0",
        "express": "^4.17.1",
        "nanoid": "^3.1.12",
        "ws": "^7.3.1"
    },
    "prettier": {
        "useTabs": false,
        "tabWidth": 4,
        "printWidth": 120,
        "arrowParens": "always",
        "trailingComma": "all"
    }
}
